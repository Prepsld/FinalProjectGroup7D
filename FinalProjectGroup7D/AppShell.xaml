    -->

    <TabBar>
        <!--
            DataTemplate local:MainPage
            ^this is what actually changes the tab page to display the xaml
        -->
        <ShellContent
        Title="Overview"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
        
        
        <!--
        <ShellContent
        Title="Overview"
        ContentTemplate="{DataTemplate local:Overview}"
        Route="Overview" />
        -->
        

        <ShellContent
        Title="Utilities"
        ContentTemplate="{DataTemplate local:Utilities}"
        Route="Utilities" />

        <ShellContent
        Title="Search Utilities"
        ContentTemplate="{DataTemplate local:UtilitiesSearch}"
        Route="UtilitiesSearch" />


    </TabBar>


</Shell>

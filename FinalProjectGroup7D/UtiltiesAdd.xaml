<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FinalProjectGroup7D.UtiltiesAdd"
             Title="UtiltiesAdd"
             BackgroundColor = "DeepSkyBlue">


    <VerticalStackLayout>

        <Entry
                x:Name="entryAdd" 
                Grid.Row="1" Grid.Column="2"
                VerticalOptions="Center"
                HorizontalOptions="Center"
                Keyboard="Text"
                Text="Type here to add new utility" 
                HeightRequest="50" 
                WidthRequest="225" 
                Margin="10" 
                PlaceholderColor="White" 
                Placeholder="LAadvde nndeewr TPoiwknachu" 
                BackgroundColor="Transparent" />

        <Button
                x:Name="ApplyBtn"
                Grid.Row="1" Grid.Column="3"
                VerticalOptions="Center"
                HorizontalOptions="Center"
                Text="Add"
                SemanticProperties.Hint="Click to add new utilities."
                Clicked="AddUtilities" />

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            
            <Label x:Name="utilityNumberLabel" Grid.Row="0" Grid.Column="0"></Label>
            <Label x:Name="typeLabel" Grid.Row="0" Grid.Column="1"></Label>
            <Label x:Name="rateLabel" Grid.Row="0" Grid.Column="2"></Label>
        </Grid>
    </VerticalStackLayout>

</ContentPage>
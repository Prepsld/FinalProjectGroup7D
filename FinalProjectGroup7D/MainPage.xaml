<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FinalProjectGroup7D.MainPage">


    <Grid>

        <CollectionView
            Grid.Column="1"
            Grid.Row="1"
            x:Name="UserList"
            SelectionMode="Single">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid BackgroundColor="DarkRed"  VerticalOptions="Fill" ColumnSpacing="10" RowSpacing="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="250" />
                            <ColumnDefinition Width="310" />

                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="90" />
                            <RowDefinition Height="90" />
                            <RowDefinition Height="90" />
                            <RowDefinition Height="90" />
                            <RowDefinition Height="90" />
                            <RowDefinition Height="90" />
                            <RowDefinition Height="80" />
                        </Grid.RowDefinitions>

                        <Label 
                            HorizontalOptions="End"
                            Grid.Column="0" 
                            Grid.Row="0" 
                            Text="Account Number:"
                            FontSize="24">
                        </Label>
                        <Label 
                            HorizontalOptions="Start"
                            Grid.Column="1" 
                            Grid.Row="0" 
                            Text="{Binding AccountNum}" 
                            FontSize="24">
                        </Label>

                        <Label 
                            HorizontalOptions="End"
                            Grid.Column="0" 
                            Grid.Row="1" 
                            Text="First Name:" 
                            FontSize="24">
                        </Label>
                        <Label 
                            HorizontalOptions="Start"
                            Grid.Column="1" 
                            Grid.Row="1" 
                            Text="{Binding FirstName}" 
                            FontSize="24">
                        </Label>

                        <Label 
                            HorizontalOptions="End"
                            Grid.Column="0" 
                            Grid.Row="2" 
                            Text="Last Name:" 
                            FontSize="24">
                        </Label>
                        <Label 
                            HorizontalOptions="Start"
                            Grid.Column="1" 
                            Grid.Row="2" 
                            Text="{Binding LastName}" 
                            FontSize="24">
                        </Label>

                        <Label 
                            HorizontalOptions="End"
                            Grid.Column="0" 
                            Grid.Row="3" 
                            Text="Mailing Address:" 
                            FontSize="24">
                        </Label>
                        <Label 
                            HorizontalOptions="Start"
                            Grid.Column="1" 
                            Grid.Row="3" 
                            Text="{Binding MailingAddress}" 
                            FontSize="24">
                        </Label>

                        <Label 
                            HorizontalOptions="End"
                            Grid.Column="0" 
                            Grid.Row="4" 
                            Text="Email Address:" 
                            FontSize="24">
                        </Label>
                        <Label 
                            HorizontalOptions="Start"
                            Grid.Column="1" 
                            Grid.Row="4" 
                            Text="{Binding Email}" 
                            FontSize="24">
                        </Label>

                        <Label 
                            HorizontalOptions="End"
                            Grid.Column="0" 
                            Grid.Row="5" 
                            Text="Phone Number:" 
                            FontSize="24">
                        </Label>
                        <Label 
                            HorizontalOptions="Start"
                            Grid.Column="1" 
                            Grid.Row="5" 
                            Text="{Binding PhoneNum}" 
                            FontSize="24">
                        </Label>

                        <Label 
                            HorizontalOptions="End"
                            Grid.Column="0" 
                            Grid.Row="6" 
                            Text="Credit Card Number:" 
                            FontSize="24">
                        </Label>
                        <Label 
                            HorizontalOptions="Start"
                            Grid.Column="1" 
                            Grid.Row="6" 
                            Text="{Binding CreditCard}" 
                            FontSize="24">
                        </Label>

                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <CollectionView
            Grid.Column="0"
            Grid.Row="0"
            x:Name="UtilityInfo"
            SelectionMode="Single"> 
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid 
                        ColumnSpacing="5" 
                        RowSpacing="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="600" />
                            <ColumnDefinition Width="50" />
                            <ColumnDefinition Width="50" />
                            <ColumnDefinition Width="400" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition 
                                Height="40" />
                        </Grid.RowDefinitions>
                        <Label 
                            HorizontalOptions="End"
                            Grid.Column="1" 
                            Grid.Row="0" 
                            Text="{Binding UtilityNum}"
                            FontSize="24">
                        </Label>

                        <Label 
                            HorizontalOptions="End"
                            Grid.Column="2" 
                            Grid.Row="0" 
                            Text="{Binding Type}"
                            FontSize="24">
                        </Label>

                        <Label 
                            HorizontalOptions="End"
                            Grid.Column="3" 
                            Grid.Row="0" 
                            Text="{Binding Rate}"
                            FontSize="24">
                        </Label>

                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </Grid>
</ContentPage>

<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FinalProjectGroup7D.MainPage">

    <Grid ColumnSpacing="10" RowSpacing="5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" />
            <ColumnDefinition Width="200" />
            <ColumnDefinition Width="400" />
            <ColumnDefinition Width="500" />

        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="50" />
            <RowDefinition Height="50" />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>

        <!-- x:Name="firstNameLabel" is what enables C# and XAML to display data into the proper text field -->
        
        <Label Grid.Column="1" Grid.Row="1" Text="First Name:" FontSize="36" ></Label>
        <Label Grid.Column="1" Grid.Row="2" x:Name="firstNameLabel" FontSize="36" ></Label>
        <Label Grid.Column="2" Grid.Row="1" Text="Last Name:" FontSize="36" ></Label>
        <Label Grid.Column="2" Grid.Row="2" x:Name="lastNameLabel" FontSize="36"></Label>
        <Label Grid.Column="3" Grid.Row="1" Text="Email Address:" FontSize="36" ></Label>
        <Label Grid.Column="3" Grid.Row="2" x:Name="emailLabel" FontSize="36"></Label>
        <Label Grid.Column="3" Grid.Row="2" x:Name="usageLabel" FontSize="36"></Label>
        
    </Grid>
</ContentPage>

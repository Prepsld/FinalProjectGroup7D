<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FinalProjectGroup7D.MainPage">

    <Grid ColumnSpacing="10" RowSpacing="5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- I have no idea how to properly space the grid -->
        <Label Text="Column 2" Grid.Row="4" Grid.Column="1" />

        <!-- x:Name="firstNameLabel" is what enables C# and XAML to display data into the proper text field -->
        <Label Grid.Column="0" x:Name="firstNameLabel"></Label>
        <Label Grid.Column="1" x:Name="lastNameLabel"></Label>
        <Label Grid.Column="2" x:Name="emailLabel"></Label>
    </Grid>
</ContentPage>
